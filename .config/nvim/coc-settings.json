{
    "languageserver": {
      "rescript": {
        "enable": true,
        "module": "~/.local/share/nvim/plugged/vim-rescript/server/out/server.js",
        "args": ["--node-ipc"],
        "filetypes": ["rescript"],
        "rootPatterns": ["bsconfig.json"]
      },
      "nim": {
         "command": "nimlsp",
         "filetypes": [ "nim" ],
         "trace.server": "verbose"
      },
      "ocaml-lsp": {
        "command": "opam",
        "args": ["config", "exec", "--", "ocamllsp"],
        "filetypes": ["ocaml", "reason"]
      }
    }
}
